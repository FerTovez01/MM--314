#include <iostream>
using namespace std;


int main() 
{
    int numero;
    std::string cadena;

    for (int i = 1; i <= 5; i++) {
        cout << "Ingrese el numero " << i << ": ";
        cin >> numero;

        if (numero <= 0) {
            break;
        }

        cadena += to_string(numero);
    }

    cout << "La cadena resultante es: " << cadena << endl;

    return 0;
}
